<Window x:Class="Crosshair10.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <!-- Fullscreen drawing area -->
    <Canvas x:Name="CrosshairCanvas" Background="Transparent">
        <Rectangle x:Name="LineLeft" />
        <Rectangle x:Name="LineRight" />
        <Rectangle x:Name="LineTop" />
        <Rectangle x:Name="LineBottom" />
    </Canvas>
</Window>
